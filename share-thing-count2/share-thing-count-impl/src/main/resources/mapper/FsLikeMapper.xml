<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangzc.sharethingcountimpl.mapper.FsLikeMapper">

    <resultMap id="BaseResultMap" type="com.zhangzc.sharethingcountimpl.pojo.domain.FsLike">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="articleId" column="article_id" jdbcType="INTEGER"/>
            <result property="state" column="state" jdbcType="TINYINT"/>
            <result property="likeUser" column="like_user" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,article_id,author_id,state,
        like_user,create_time,update_time
    </sql>

    <!-- 无则添加，有则取反点赞状态 -->
    <!-- 无则添加，有则取反点赞状态 -->
    <insert id="saveFslike" parameterType="com.zhangzc.sharethingcountimpl.pojo.domain.FsLike">
        INSERT INTO fs_like (
        article_id,  <!-- 补充核心关联字段：文章ID，必加！ -->
        author_id,
        state,
        like_user,
        create_time,
        update_time
        ) VALUES (
        #{fsLike.articleId},  <!-- 对应实体类的articleId属性 -->
        #{fsLike.authorId},
        1,  <!-- 新增默认点赞状态为1（点赞） -->
        #{fsLike.likeUser},
        #{fsLike.createTime},
        #{fsLike.updateTime}
        )
        ON DUPLICATE KEY UPDATE
        state = 1 - state,  <!-- 状态取反：1→0（取消点赞），0→1（重新点赞） -->
        update_time = #{fsLike.updateTime}
        <!-- 无需更新author_id，唯一索引确定后作者ID不会变，删掉多余更新 -->
    </insert>
    
</mapper>
